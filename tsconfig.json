{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "Node",
        "target": "ES6",
        "noImplicitAny": false,
        "sourceMap": false,
        "outDir": "./build",
        "types": ["mocha", "node"],
        "noUnusedLocals": true,
        "noUnusedParameters": false
    },
    "compileOnSave": true,
    "include": [
        "src/**/*",
        "test/**/*",
        "tools/**/*"
    ]
}
