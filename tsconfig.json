{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2016",
        "noImplicitAny": false,
        "inlineSourceMap": true,
        "outDir": "./build",
        "types": ["mocha", "node"],
        "strictNullChecks": true
    },
    "compileOnSave": true,
    "include": [
        "src/**/*",
        "tools/**/*",
        "test/config.ts",
